class Solution {
    int countPairs(int arr[], int target) {
        int count =0;
        Arrays.sort(arr);
        int left=0;
        int right=arr.length-1;
        while(left<right){
            if(arr[left]+arr[right]<target){
            count+=right-left;
          
            left++;}
            else{
                  right--;
            }
        }
        return count;
    }
}
